@{
	ViewBag.Title = "Game Administration - All Games";
}
@section scripts
{
	<script src="~/Scripts/GamesAdminHub.js" type="text/javascript"></script>
}
<button onclick="CreateNewGameDialog()" class="btn">
	New Game</button>
<ul id="gamesContainer">
	<li gameid="empty" style="display: none">
		<div class="container-fluid no-padding">
			<div class="row-fluid score">
				<div class="span6 centered">
					<div class="awayTeam">
					</div>
				</div>
				<div class="span6 centered">
					<div class="homeTeam">
					</div>
				</div>
			</div>
			<div class="row-fluid score scoreRow">
				<div class="span6 centered">
					<div class="awayScore">
					</div>
				</div>
				<div class="span6 centered">
					<div class="homeScore">
					</div>
				</div>
			</div>
			<div class="row-fluid inning">
				<div class="span12 centered">
					<div class="inningLabel">
					</div>
				</div>
			</div>
			<div class="row-fluid inningInfo">
				<div class="span6">
					<div class="outs pull-left">
					</div>
				</div>
				<div class="span6">
					<div class="countOnBatter pull-right">
					</div>
				</div>
			</div>
			<div class="row-fluid runnersOn">
				<div class="span12 centered">
					<div class="runnersOnBase">
					</div>
				</div>
			</div>
			<div class="row-fluid lastPlayInfo">
				<div class="span12 centered">
					<div class="lastPlay">
					</div>
				</div>
			</div>
			<button class="editGame btn">
				Edit Game Scenario</button>
		</div>
	</li>
	@foreach (GameTrakR.Code.Game game in Model.Games)
 {
		<li gameID="@game.GameID">
			<div class="container-fluid no-padding">
				<div class="row-fluid score">
					<div class="span6 centered">
						<div class="awayTeam">@game.AwayTeam</div>
					</div>
					<div class="span6 centered">
						<div class="homeTeam">@game.HomeTeam</div>
					</div>
				</div>
				<div class="row-fluid score scoreRow">
					<div class="span6 centered">
						<div class="awayScore">@game.CurrentGameScenario.AwayScore</div>
					</div>
					<div class="span6 centered">
						<div class="homeScore">@game.CurrentGameScenario.HomeScore</div>
					</div>
				</div>
				<div class="row-fluid inning">
					<div class="span12 centered">
						<div class="inningLabel">@game.CurrentGameScenario.InningLabel</div>
					</div>
				</div>
				<div class="row-fluid inningInfo">
					<div class="span6">
						<div class="outs pull-left">@game.CurrentGameScenario.OutsLabel</div>
					</div>
					<div class="span6">
						<div class="countOnBatter pull-right">@game.CurrentGameScenario.CountOnBatter</div>
					</div>
				</div>
				<div class="row-fluid runnersOn">
					<div class="span12 centered">
						<div class="runnersOnBase">@game.CurrentGameScenario.RunnersOnBase</div>
					</div>
				</div>
				<div class="row-fluid lastPlayInfo">
					<div class="span12 centered">
						<div class="lastPlay">@game.CurrentGameScenario.LastPlay</div>
					</div>
				</div>
				<button class="editGame" onclick="CreateScenarioDialog(@game.GameID)">
					Edit Game Scenario</button>
			</div>
		</li>
 }
</ul>
<button onclick="Reset()" class="btn">
	Reset Games List</button>
